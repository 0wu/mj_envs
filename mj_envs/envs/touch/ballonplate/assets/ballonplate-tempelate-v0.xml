   <compiler angle='radian' meshdir='.' texturedir='.' />

    <worldbody>
        <light directional='false' diffuse='.7 .7 .7' specular='0.03 0.03 0.03' pos='-.1 -.1 1.0' dir='.1 .1 -1'/>
        <geom name='grond' type='plane' size='2 2 .1'/>

        <!-- Plate -->
        <body name='plate' pos='0 0 .1'>
            <site name='target' pos='0 0 0.025' rgba='0 1 0 .2' size='0.016'/>
            <geom type='box' size='0.1 0.1 0.01' rgba='.8 .9 .9 1'/>
            <joint name='xPlate' damping='.1' type='hinge' axis='1 0 0' limited='true' range='-.5 .5'/>
            <joint name='yPlate' damping='.1' type='hinge' axis='0 1 0' limited='true' range='-.5 .5'/>

            <!-- Plate touch site goes here-->
        </body>

        <!-- Ball -->
        <body name='ball' pos='0 0 .125'>
            <geom type='sphere' size='0.015' rgba='.95 .95 .8 1'/>
            <freejoint/>>
        </body>
    </worldbody>

    <sensor>
        <!-- Plate touch sensors goes here-->
    </sensor>

    <actuator>
        <position name='xPlane' joint='xPlate' ctrlrange='-.5 .5' ctrllimited='true'/>
        <position name='yPlane' joint='yPlate' ctrlrange='-.5 .5' ctrllimited='true'/>
    </actuator>

</mujoco>